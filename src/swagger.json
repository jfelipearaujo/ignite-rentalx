  "openapi": "3.0.0",
  "info": {
    "title": "RentalX API Documentation",
    "description": "This is an Rent API",
    "version": "1.0.0",
    "contact": {
      "email": "j.felipe.araujo@outlook.com"
    }
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": [
          "Category"
        ],
        "summary": "Create a category",
        "description": "Creates a new category based on a given name and description",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "category name",
                  "description": "category description"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Category created"
          },
          "500": {
            "description": "Category already exists"
          }
        }
      }
    }
  }
}